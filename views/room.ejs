<style>
  body,html{
    background-color:black;
    margin: 0;
    padding: 0;
  }
  #video-grid {
    width:100%;
    height:90vh;
    margin: 0 auto;
  }

  /* @media{} */
  video {
    width: 33%;
    /* height:90vh; */
    object-fit: cover;
    margin : 0 auto;
    /* flex:1; */
    padding:5px;
    border-radius: 20px;
  }
  
  .screen{
    width: 100%;
    display:flex;
  }

  .link-icons{
    color:white;
    opacity: 0.3
  }
  .link-icons:hover{
    color:white;
    opacity: 1;
  }

  #vidActions{
    display:flex;    
    width: 100%;
    background-color: grey;
    height:10vh;
    flex-direction: row;
    justify-content: center;
    margin:0 auto;
  }

  #vidActions button{
    background-color:grey;
      border: none;
      padding:10px;
      color:black;
  }
  
  #vidActions button i:hover{
    transform: scale(2);
  }

  #vid2{
    height:10px;
    width:10px;
  }

  .main__right {
    /* flex:0.2; */
    width:20%;
    background-color: #242324;
    border-left: 1px solid #3D3D42;
    display: flex;
    flex-direction: column;
}
  .main__header {
    padding-top: 5px;
    color: #F5F5F5;
    text-align: center;
}
  .main__chat_window {
    flex-grow: 1;
    overflow-y: auto;
}

.messages {
    color: white;
    list-style: none;
}

.main__message_container {
    padding: 22px 12px;
    display: flex;
}

.main__message_container input {
    flex-grow: 1;
    background-color: transparent;
    border: none;
    color: #F5F5F5;
}
  
</style>
</head>

