<%- include('../partials/header') %>

  <title>Meeting Chats || MS Teams</title>

  <link rel="stylesheet" href="/stylesheet/chat/chats.css" type="text/css">

  <script defer src="/scripts/chat/meetChat.js"></script>
  <script>
    let userId = "<%= userid %>"
  </script>

</head>

<body>
    <%- include('../partials/navbar') %>
    <%- include('../partials/flash_success') %>
    <%- include('../partials/flash_error') %>
    
    <div class="container">
    <div class="messaging">
          <div class="inbox_msg">
            <div class="inbox_people">
              <div class="headind_srch">
                <div class="recent_heading">
                  <h4>Recent</h4>
                </div>
                <div class="srch_bar">
                  <div class="stylish-input-group">
                    <input type="text" class="search-bar"  placeholder="Search" >
                    <span class="input-group-addon">
                    <button type="button"> <i class="fa fa-search" aria-hidden="true"></i> </button>
                    </span> 
                  </div>
                </div>
              </div>
              <div id="people" class="inbox_chat">
              
              </div>
            </div>
              <div class="initial-bg">
                
              </div>
              <div class="mesgs">
                <div id="messageHead">
                  <i id="back" class="fas fa-arrow-circle-left" onclick="showPeople()"></i>
                  <div id="friendName"></div>
                  <button type="button" class="btn btn-outline" style="background-color: #4b53bc;color:white;line-height: 0.5em;">Join meet</button>
                </div>
                <div id="chats" class="msg_history">
                  
                </div>
                <div class="type_msg">
                  <div class="input_msg_write">
                    <input type="text" class="write_msg" placeholder="Type a message" />
                    <button class="msg_send_btn" type="button"><i class="fa fa-paper-plane"></i></button>
                  </div>
                </div>
              </div>
          </div>
          
        </div>
    </div>
