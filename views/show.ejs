<%- include('partials/header') %>

<title>Show Post || MS Teams</title>

<style>
    .post-container{
    width:80%;
    margin: 3em auto;
    border: 2px solid black;
    padding:2em;
}

.img-div{
    margin-top:2em;
    height:30em;
}

.post-img{
    width:100%;  
    height:100%;
    border-radius: 10px;
    margin:0 auto;
    object-fit: contain;
}

@media screen and (max-width:620px) {
    .post-container{
        width:100%;
        padding:0.5em;
    }
}

</style>

</head>

<body>
    <%- include('partials/navbar') %>
    <div class="container post-container">
        <div class="img-div">
            <img src="\<%= post.image %>" class="post-img">
        </div>
        <h1 style="margin-top:1em;text-align:center"> <%= post.title %> </h1><br>
        <h6 style="text-align:center;opacity: 0.5;"><%= post.date.toDateString() %> </h6><br>
        <p style="margin-top:1em;text-align:center">
            <%- post.description %>
        </p>

        <div class="d-flex" style="flex-direction: row; margin-top:2em">
            <a href="/post/edit/<%= post._id %>"><button class="btn btn-outline-primary">
                Edit
            </button></a>
            
            <form class="deleteForm" action="/post/<%= post._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-outline-danger" type="submit" style="margin-left: 1em;">
                    Delete
                </button>
            </form>
        </div>
    </div>


<%- include('partials/footer') %>